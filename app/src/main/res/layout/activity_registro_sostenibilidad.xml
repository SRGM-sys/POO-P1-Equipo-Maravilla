<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btn_volver_sost"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_revert"
                app:tint="@color/text_secondary"
                android:contentDescription="Volver" />

            <TextView
                android:id="@+id/tv_titulo_sost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eco Registro Diario"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/primary_green"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_fecha_actual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: Hoy"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <CheckBox
                    android:id="@+id/cb_transporte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Usé transporte sostenible (bici, caminar)"
                    android:textColor="@color/text_dark"
                    android:buttonTint="@color/primary_green"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cb_impresiones"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Evité impresiones innecesarias"
                    android:textColor="@color/text_dark"
                    android:buttonTint="@color/primary_green"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cb_envases"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sin envases descartables"
                    android:textColor="@color/text_dark"
                    android:buttonTint="@color/primary_green"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="12dp"/>

                <CheckBox
                    android:id="@+id/cb_reciclaje"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Separé mis residuos"
                    android:textColor="@color/text_dark"
                    android:buttonTint="@color/primary_green"
                    android:paddingStart="8dp"
                    android:layout_marginBottom="24dp"/>

                <Button
                    android:id="@+id/btn_guardar_eco"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="REGISTRAR AVANCE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary_green"
                    app:cornerRadius="30dp"/>

                <Button
                    android:id="@+id/btn_ver_resumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver Resumen Semanal"
                    android:textColor="@color/primary_green"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="8dp"
                    style="?attr/borderlessButtonStyle"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>