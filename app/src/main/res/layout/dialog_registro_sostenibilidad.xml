<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro Diario Eco"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_fecha_dialogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hoy"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="16dp"/>

        <CheckBox
            android:id="@+id/cb_transporte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usé transporte sostenible"
            android:buttonTint="@color/primary_green"/>

        <CheckBox
            android:id="@+id/cb_impresiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Evité impresiones"
            android:buttonTint="@color/primary_green"/>

        <CheckBox
            android:id="@+id/cb_envases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cero envases descartables"
            android:buttonTint="@color/primary_green"/>

        <CheckBox
            android:id="@+id/cb_reciclaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Separé mis residuos"
            android:buttonTint="@color/primary_green"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_cancelar_dialogo"
                style="?attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancelar"
                android:textColor="@color/text_secondary"/>

            <Button
                android:id="@+id/btn_guardar_dialogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:backgroundTint="@color/primary_green"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>