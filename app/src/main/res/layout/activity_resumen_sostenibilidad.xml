<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.sostenibilidad.ResumenSostenibilidadActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp">

        <LinearLayout
            android:id="@+id/ll_header_semanas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="24dp"
            android:paddingHorizontal="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/btn_semana_ant"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_previous"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary_green"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_numero_semana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Semana 1"
                    android:textColor="@color/primary_green"
                    android:textSize="22sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_rango_fechas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(01 Ene - 04 Ene)"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_semana_sig"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_media_next"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="@color/primary_green"/>

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_frecuencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/ll_header_semanas">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frecuencia de Acciones"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Acción" android:textStyle="bold" android:textColor="@color/text_dark"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6" android:text="Veces" android:gravity="center" android:textStyle="bold" android:textColor="@color/text_dark"/>
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="Estado" android:gravity="center" android:textStyle="bold" android:textColor="@color/text_dark"/>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0" android:layout_marginVertical="12dp"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Transporte Sostenible" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                    <TextView android:id="@+id/tv_count_transporte" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6" android:text="0/7" android:gravity="center" android:textStyle="bold" android:textColor="@color/text_dark"/>
                    <TextView android:id="@+id/tv_estado_transporte" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="-" android:background="@drawable/bg_boton_opcion" android:backgroundTint="@color/text_secondary" android:textColor="@color/white" android:padding="4dp" android:gravity="center" android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Evité Impresiones" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                    <TextView android:id="@+id/tv_count_impresiones" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6" android:text="0/7" android:gravity="center" android:textStyle="bold" android:textColor="@color/text_dark"/>
                    <TextView android:id="@+id/tv_estado_impresiones" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="-" android:background="@drawable/bg_boton_opcion" android:backgroundTint="@color/text_secondary" android:textColor="@color/white" android:padding="4dp" android:gravity="center" android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical" android:layout_marginBottom="12dp">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Sin Envases" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                    <TextView android:id="@+id/tv_count_envases" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6" android:text="0/7" android:gravity="center" android:textStyle="bold" android:textColor="@color/text_dark"/>
                    <TextView android:id="@+id/tv_estado_envases" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="-" android:background="@drawable/bg_boton_opcion" android:backgroundTint="@color/text_secondary" android:textColor="@color/white" android:padding="4dp" android:gravity="center" android:textSize="10sp"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
                    <TextView android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="2" android:text="Separé y Reciclé" android:textColor="@color/text_secondary" android:textSize="13sp"/>
                    <TextView android:id="@+id/tv_count_reciclaje" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6" android:text="0/7" android:gravity="center" android:textStyle="bold" android:textColor="@color/text_dark"/>
                    <TextView android:id="@+id/tv_estado_reciclaje" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="-" android:background="@drawable/bg_boton_opcion" android:backgroundTint="@color/text_secondary" android:textColor="@color/white" android:padding="4dp" android:gravity="center" android:textSize="10sp"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_analisis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@id/cv_frecuencia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Análisis Ecológico"
                    android:textColor="@color/primary_green"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tv_analisis_dias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Cargando..."
                    android:textColor="@color/text_dark"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:id="@+id/tv_analisis_perfectos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Cargando..."
                    android:textColor="@color/text_dark"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btn_registrar_dia"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="REGISTRAR DÍA ESPECÍFICO"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary_green"
            app:cornerRadius="30dp"
            android:layout_margin="24dp"
            app:layout_constraintTop_toBottomOf="@id/cv_analisis"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_volver_inicio"/>

        <Button
            android:id="@+id/btn_volver_inicio"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="VOLVER AL MENÚ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/primary_green"
            android:backgroundTint="@color/white"
            app:strokeColor="@color/primary_green"
            app:strokeWidth="2dp"
            app:cornerRadius="30dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/btn_registrar_dia"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>