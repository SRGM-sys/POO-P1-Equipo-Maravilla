<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/halloween_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/halloween_orange"
        android:padding="12dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/btn_volver_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/white"
                android:padding="8dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <ImageButton
                android:id="@+id/btn_reiniciar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_rotate"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:tint="@color/white"
                android:padding="8dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŽƒ BUSCAMINAS"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/btn_volver_menu"
                android:layout_toStartOf="@id/btn_reiniciar"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_minas_restantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’£ 12"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="16dp"/>

            <Chronometer
                android:id="@+id/cronometro_juego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_estado_juego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¡Cuidado con los fantasmas! ðŸ‘»"
            android:textColor="#F5F5F5"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tablero_buscaminas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:background="@drawable/fondo_dialogo_redondo"
        android:backgroundTint="#2D2D2D"
        android:padding="4dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#424242">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ‘† Toque corto: Revelar  |  ðŸ¦‡ Largo: Marcar"
            android:textColor="@color/white"
            android:gravity="center"
            android:padding="12dp"
            android:textSize="13sp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>