<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/game_accent"
        android:padding="16dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/btn_volver_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@android:drawable/ic_menu_revert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Regresar"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_titulo_juego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JUEGO DE MEMORIA"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_intentos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intentos: 0"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginEnd="32dp"/>

            <TextView
                android:id="@+id/tv_pares"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pares: 0/8"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"/>
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tablero_memoria"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:padding="4dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5">

        <TextView
            android:id="@+id/tv_cronometro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â± 00:00"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/game_accent"
            android:fontFamily="sans-serif-condensed"/>

    </LinearLayout>

</LinearLayout>
